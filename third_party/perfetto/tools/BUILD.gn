copy("copy_protoc_helper") {
  testonly = true
  sources = [
    "protoc_helper.py",
  ]
  outputs = [
    "${root_out_dir}/protoc_helper",
  ]
}

group("protoc_helper") {
  testonly = true
  public_deps = [
    ":copy_protoc_helper",
  ]
  deps = [
    "../buildtools:protoc($host_toolchain)",
  ]
}

if (is_linux) {
  executable("pipestats") {
    testonly = true
    sources = [
      "pipestats.cc",
    ]
    deps = [
      "../gn:default_deps",
      "../src/base",
    ]
  }
}
