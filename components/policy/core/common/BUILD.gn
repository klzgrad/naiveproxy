  fuzzer_test("preg_parser_fuzzer") {
    sources = [
      "preg_parser_fuzzer.cc",
    ]
    seed_corpus = "//chrome/test/data/policy/gpo/fuzzer_corpus"
    dict = "//chrome/test/data/policy/gpo/fuzzer.dict"
    deps = [
      ":internal",
      "//base",
    ]
  }
}
