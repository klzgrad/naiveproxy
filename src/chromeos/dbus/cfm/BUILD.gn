import("//chromeos/services/cfm/public/buildflags/buildflags.gni")
import("//third_party/protobuf/proto_library.gni")

assert(is_chromeos, "Non-ChromeOS builds cannot depend on //chromeos")
assert(is_cfm, "Non-CfM builds cannot depend on this library")

component("cfm") {
  defines = [ "IS_CFM_HOTLINE_CLIENT_IMPL" ]
  public_deps = [
    "//chromeos/dbus:common",
    "//chromeos/dbus:dbus",
    "//chromeos/services/cfm/public/buildflags",
    "//chromeos/services/cfm/public/features",
  ]
  deps = [
    "//base",
    "//dbus",
  ]
  sources = [
    "cfm_hotline_client.cc",
    "cfm_hotline_client.h",
    "cfm_observer.h",
    "fake_cfm_hotline_client.cc",
    "fake_cfm_hotline_client.h",
  ]
}

source_set("unit_tests") {
  testonly = true
  public_deps = [ ":cfm" ]
  deps = [
    "//base",
    "//base/test:test_support",
    "//dbus:test_support",
    "//testing/gmock",
    "//testing/gtest",
  ]

  sources = [ "cfm_hotline_client_unittest.cc" ]
}
