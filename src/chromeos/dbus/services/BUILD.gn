assert(is_chromeos, "Non-ChromeOS builds cannot depend on //chromeos")

source_set("services") {
  output_name = "chromeos_dbus_services"

  deps = [
    "//base",
    "//dbus",
    "//net",
    "//url",
  ]

  sources = [
    "cros_dbus_service.cc",
    "cros_dbus_service.h",
  ]
}

source_set("test_support") {
  testonly = true
  deps = [
    ":services",
    "//base",
    "//dbus:test_support",
    "//net:test_support",
  ]
  sources = [
    "service_provider_test_helper.cc",
    "service_provider_test_helper.h",
  ]
}

source_set("unit_tests") {
  testonly = true
  deps = [
    ":services",
    ":test_support",
    "//base",
    "//base/test:test_support",
    "//dbus:test_support",
    "//testing/gmock",
    "//testing/gtest",
  ]
  sources = [ "cros_dbus_service_unittest.cc" ]
}
