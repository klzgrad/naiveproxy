import("//mojo/public/tools/bindings/mojom.gni")

mojom_component("mojom") {
  sources = [
    "file_path.mojom",
    "ip_address.mojom",
    "smbfs.mojom",
  ]

  cpp_typemaps = [
    {
      types = [
        {
          mojom = "smbfs.mojom.FilePath"
          cpp = "::base::FilePath"
        },
      ]
      traits_headers =
          [ "//chromeos/components/smbfs/file_path_mojom_traits.h" ]
      traits_sources =
          [ "//chromeos/components/smbfs/file_path_mojom_traits.cc" ]
      traits_public_deps = [ "//base" ]
    },
    {
      types = [
        {
          mojom = "smbfs.mojom.IPAddress"
          cpp = "::net::IPAddress"
        },
      ]
      traits_headers =
          [ "//chromeos/components/smbfs/ip_address_mojom_traits.h" ]
      traits_sources =
          [ "//chromeos/components/smbfs/ip_address_mojom_traits.cc" ]
      traits_public_deps = [ "//net" ]
    },
  ]

  public_deps = [ "//mojo/public/mojom/base" ]

  output_prefix = "smbfs_mojom"
  macro_prefix = "SMBFS_MOJOM"
}
