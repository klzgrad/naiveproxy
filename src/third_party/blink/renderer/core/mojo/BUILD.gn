import("//build/config/jumbo.gni")
import("//mojo/public/tools/bindings/mojom.gni")
import("//third_party/blink/renderer/core/core.gni")

blink_core_sources("mojo") {
  sources = [
    "mojo.cc",
    "mojo.h",
    "mojo_handle.cc",
    "mojo_handle.h",
    "mojo_watcher.cc",
    "mojo_watcher.h",
    "test/mojo_interface_interceptor.cc",
    "test/mojo_interface_interceptor.h",
    "test/mojo_interface_request_event.cc",
    "test/mojo_interface_request_event.h",
  ]

  deps = [
    "//mojo/public/cpp/system",
    "//services/service_manager/public/cpp",
  ]
}

jumbo_source_set("unit_tests") {
  testonly = true
  sources = [
    "tests/js_to_cpp_test.cc",
  ]

  data = [
    "tests/JsToCppTest.js",
  ]

  configs += [
    "//third_party/blink/renderer/core:blink_core_pch",
    "//third_party/blink/renderer:config",
    "//third_party/blink/renderer:inside_blink",
  ]

  deps = [
    ":test_bindings_blink",
    "//mojo/public/cpp/bindings",
    "//testing/gtest",
    "//third_party/blink/renderer/core:core",
    "//third_party/blink/renderer/core:testing",
  ]

  data_deps = [
    ":test_bindings_js_data_deps",
    "//mojo/public/js:bindings",
  ]
}

mojom("test_bindings") {
  sources = [
    "tests/js_to_cpp.mojom",
  ]
}
