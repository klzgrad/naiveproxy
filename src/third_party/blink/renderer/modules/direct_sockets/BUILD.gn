  sources = [
    "navigator_socket.cc",
    "navigator_socket.h",
    "tcp_readable_stream_wrapper.cc",
    "tcp_readable_stream_wrapper.h",
    "tcp_socket.cc",
    "tcp_socket.h",
    "tcp_writable_stream_wrapper.cc",
    "tcp_writable_stream_wrapper.h",
    "udp_socket.cc",
    "udp_socket.h",
