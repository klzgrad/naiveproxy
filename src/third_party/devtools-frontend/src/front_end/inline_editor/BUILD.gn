import("../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../scripts/build/ninja/devtools_module.gni")
import("../../third_party/typescript/typescript.gni")

devtools_module("inline_editor") {
  sources = [
    "BezierEditor.js",
    "BezierUI.js",
    "CSSAngle.ts",
    "CSSAngleEditor.ts",
    "CSSAngleSwatch.ts",
    "CSSAngleUtils.ts",
    "CSSShadowEditor.js",
    "CSSShadowModel.js",
    "CSSVarSwatch.ts",
    "ColorSwatch.ts",
    "FontEditor.js",
    "FontEditorUnitConverter.js",
    "FontEditorUtils.js",
    "SwatchPopoverHelper.js",
    "Swatches.js",
  ]

  deps = [
    "../bindings:bundle",
    "../common:bundle",
    "../component_helpers:bundle",
    "../components:bundle",
    "../css_overview:bundle",
    "../i18n:bundle",
    "../platform:bundle",
    "../sdk:bundle",
    "../text_utils:bundle",
    "../third_party/lit-html:bundle",
    "../ui:bundle",
    "../ui/components:bundle",
  ]

  visibility = [ "../component_docs/*" ]
}

copy_to_gen("legacy_css") {
  sources = [ "colorSwatch.css" ]
}

devtools_entrypoint("bundle") {
  entrypoint = "inline_editor.ts"

  deps = [
    ":inline_editor",
    "../sdk:bundle",
  ]
}

devtools_entrypoint("legacy") {
  entrypoint = "inline_editor-legacy.js"

  deps = [ ":bundle" ]
}
