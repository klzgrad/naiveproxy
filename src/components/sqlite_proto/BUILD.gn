import("//third_party/protobuf/proto_library.gni")

proto_library("test_proto") {
  testonly = true
  sources = [ "test_proto.proto" ]
}

static_library("sqlite_proto") {
  sources = [
    "key_value_data.h",
    "key_value_table.cc",
    "key_value_table.h",
    "proto_table_manager.cc",
    "proto_table_manager.h",
