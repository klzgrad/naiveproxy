import("//build/config/ui.gni")

component("menu") {
  sources = [
    "menu.cc",
    "menu.h",
    "menu_property_list.cc",
    "menu_property_list.h",
  ]
  defines = [ "IS_DBUS_IMPL" ]
  deps = [
    "//base",
    "//base:i18n",
  ]
  public_deps = [
    "//components/dbus/properties",
    "//dbus",
    "//skia",
    "//ui/base",
    "//ui/gfx",
  ]
  if (use_x11) {
    configs += [ "//build/config/linux:x11" ]
  }
}

source_set("unit_tests") {
  testonly = true
  sources = [
    "menu_property_list_unittest.cc",
  ]
  deps = [
    ":menu",
    "//base",
    "//testing/gtest",
  ]
}
