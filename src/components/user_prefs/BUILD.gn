component("user_prefs") {
  sources = [
    "user_prefs.cc",
    "user_prefs.h",
    "user_prefs_export.h",
  ]

  defines = [ "USER_PREFS_IMPLEMENTATION" ]

  deps = [
    "//base",
    "//components/prefs",
  ]

  if (is_android) {
    sources += [ "android/user_prefs_android.cc" ]
    deps += [
      "android:jni_headers",
      "//components/embedder_support/android:browser_context",
      "//components/prefs",
      "//content/public/browser",
    ]
  }
}
