import("//third_party/protobuf/proto_library.gni")

static_library("encrypted_messages") {
  sources = [
    "message_encrypter.cc",
    "message_encrypter.h",
  ]

  public_deps = [
    ":encrypted_message_proto",
  ]

  deps = [
    "//base",
    "//crypto",
    "//third_party/boringssl:boringssl",
  ]
}

