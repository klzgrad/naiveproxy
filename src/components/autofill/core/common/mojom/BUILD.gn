  testonly = true
  sources = [
    "autofill_types_mojom_traits_unittest.cc",
  ]

  public_deps = [
    ":mojo_test_types",
  ]

  deps = [
    "//base",
    "//base/test:test_support",
    "//components/autofill/core/browser:test_support",
    "//components/password_manager/core/common",
    "//mojo/public/cpp/bindings",
    "//testing/gtest",
  ]
}
