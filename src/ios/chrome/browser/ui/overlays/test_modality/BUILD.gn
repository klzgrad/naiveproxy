    "//base/test:test_support",
    "//ios/chrome/browser/main:test_support",
    "//ios/chrome/browser/overlays",
    "//ios/chrome/browser/overlays/public/test_modality",
    "//ios/chrome/browser/ui/overlays/test",
    "//ios/chrome/test:test_support",
    "//ios/web/public/test",
    "//testing/gtest",
  ]
}
