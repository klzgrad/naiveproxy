  deps = [
    ":alerts",
    "//ios/chrome/browser/ui/alert_view",
    "//ios/chrome/browser/ui/alert_view/test",
    "//ios/chrome/browser/ui/elements",
    "//ios/chrome/browser/ui/overlays/common/alerts/test",
    "//ios/chrome/browser/ui/overlays/test",
    "//testing/gtest",
    "//ui/base",
  ]
