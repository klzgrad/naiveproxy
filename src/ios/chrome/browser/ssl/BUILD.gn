    "ios_ssl_error_handler_unittest.mm",
  ]
  deps = [
    ":feature_flags",
    ":ssl",
    "//base/test:test_support",
    "//components/security_interstitials/core",
    "//components/security_state/core",
    "//ios/chrome/browser/browser_state:test_support",
