import("//build/config/linux/pkg_config.gni")
import("//build/shim_headers.gni")

pkg_config("system_absl_time") {
  packages = [ "absl_time" ]
}

shim_headers("time_shim") {
  root_path = "."
  prefix = "absl/time/"
  headers = [
    "civil_time.h",
    "clock.h",
    "time.h",
  ]
}

source_set("time") {
  deps = [ ":time_shim" ]
  public_configs = [ ":system_absl_time" ]
}

source_set("time_test") {
}
