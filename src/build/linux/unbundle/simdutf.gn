import("//build/config/linux/pkg_config.gni")
import("//build/shim_headers.gni")

shim_headers("header") {
  root_path = "."
  headers = [ "simdutf.h" ]
}

pkg_config("system_simdutf") {
  packages = [ "simdutf" ]
}

source_set("simdutf") {
  public_configs = [ ":system_simdutf" ]
  public_deps = [ ":header" ]
}
