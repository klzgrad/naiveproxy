import("//build/config/linux/pkg_config.gni")
import("//build/shim_headers.gni")

pkg_config("system_libavif") {
  packages = [ "libavif" ]
}

shim_headers("avif_shim") {
  root_path = "src/include"
  headers = [ "avif/avif.h" ]
}

source_set("libavif") {
  deps = [ ":avif_shim" ]
  public_configs = [ ":system_libavif" ]
}
