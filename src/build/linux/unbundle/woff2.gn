import("//build/config/linux/pkg_config.gni")
import("//build/shim_headers.gni")

pkg_config("system_woff2") {
  packages = [ "libwoff2dec" ]
}

shim_headers("woff2_shim") {
  root_path = "include"
  headers = [
    "woff2/decode.h",
    "woff2/encode.h",
    "woff2/output.h",
  ]
}

source_set("woff2_dec") {
  deps = [ ":woff2_shim" ]
  public_configs = [ ":system_woff2" ]
}
