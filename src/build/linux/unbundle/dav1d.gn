import("//build/config/linux/pkg_config.gni")
import("//build/shim_headers.gni")

pkg_config("system_dav1d") {
  packages = [ "dav1d" ]
}

shim_headers("dav1d_shim") {
  root_path = "libdav1d/include"
  headers = [
    "dav1d/common.h",
    "dav1d/data.h",
    "dav1d/dav1d.h",
    "dav1d/headers.h",
    "dav1d/picture.h",
    "dav1d/version.h",
  ]
}

source_set("dav1d") {
  deps = [ ":dav1d_shim" ]
  public_configs = [ ":system_dav1d" ]
}

group("dav1d_headers") {
  public_deps = [ ":dav1d_shim" ]
}

config("dav1d_config") {
  configs = [
    ":system_dav1d",
    ":dav1d_shim_config",
  ]
}
