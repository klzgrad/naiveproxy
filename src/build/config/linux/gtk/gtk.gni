import("//build/config/ui.gni")

declare_args() {
  # Whether or not we should use libgtk.
  use_gtk = is_desktop_linux && !is_chromeos && !is_chromecast && !use_ozone

  # The (major) version of GTK to build against.
  gtk_version = 3
}

assert(gtk_version >= 3 && gtk_version <= 4)
