import("//build/toolchain/gcc_toolchain.gni")

gcc_toolchain("ppc64") {
  cc = "gcc"
  cxx = "g++"

  readelf = "readelf"
  nm = "nm"
  ar = "ar"
  ld = cxx

  toolchain_args = {
    current_cpu = "ppc64"
    current_os = "aix"

    # reclient does not support gcc.
    use_remoteexec = false
    is_clang = false
  }
}
