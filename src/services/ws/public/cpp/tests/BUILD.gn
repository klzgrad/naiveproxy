import("//build/config/ui.gni")
import("//testing/test.gni")

source_set("tests") {
  testonly = true

  sources = [
    "gpu_unittest.cc",
  ]

  deps = [
    "//base",
    "//base/test:test_support",
    "//mojo/core/embedder",
    "//mojo/public/cpp/system",
    "//services/service_manager/public/cpp",
    "//services/ws/public/cpp/gpu",
    "//testing/gtest",
    "//ui/gfx:test_support",
    "//ui/gfx/geometry",
    "//ui/gfx/geometry/mojo",
  ]

  if (use_x11) {
    deps += [ "//ui/gfx/x" ]
  }
}
