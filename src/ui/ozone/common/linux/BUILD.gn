import("//build/config/ui.gni")
import("//ui/ozone/ozone.gni")

assert(ozone_platform_gbm || ozone_platform_wayland)

source_set("drm") {
  sources = [
    "drm_util_linux.cc",
    "drm_util_linux.h",
  ]

  deps = [
    "//base:base",
    "//build/config/linux/libdrm",
    "//ui/gfx:buffer_types",
  ]
}

source_set("gbm") {
  sources = [
    "gbm_buffer.h",
    "gbm_device.h",
    "gbm_wrapper.cc",
    "scoped_gbm_device.cc",
    "scoped_gbm_device.h",
  ]

  deps = [
    ":drm",
    "//base:base",
    "//build/config/linux/libdrm",
    "//third_party/minigbm",
    "//ui/gfx:buffer_types",
    "//ui/gfx:memory_buffer",
    "//ui/gfx/geometry:geometry",
    "//ui/ozone:ozone_base",
  ]
}
