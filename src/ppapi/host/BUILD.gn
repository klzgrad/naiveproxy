  defines = [ "PPAPI_HOST_IMPLEMENTATION" ]

  deps = [
    "//base",
    "//media:shared_memory_support",
    "//ppapi/c",
    "//ppapi/proxy:ipc",
    "//ppapi/shared_impl",
    "//ui/events:events_base",
    "//ui/surface",
    "//url",
