    "chromoting_module.h",
    "core.cc",
    "core.h",
    "core_resource.h",
    "elevated_native_messaging_host.cc",
    "elevated_native_messaging_host.h",
    "host_service.cc",
    "host_service.h",
    "launch_native_messaging_host_process.cc",
    "launch_native_messaging_host_process.h",
    "rdp_desktop_session.cc",
